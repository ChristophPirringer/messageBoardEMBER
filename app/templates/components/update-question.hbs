{{yield}}


{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s {{question.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=question.content}}
        </div>
        <span title="save update" {{action 'update' question}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel update" {{action 'updateQuestionHide'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}

    <span title="update question" {{action 'updateQuestionForm' question}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

{{/if}}
