{{yield}}

{{#if editAnswerForm}}
  <h4>Update {{answer.username}}'s answer!</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="username">Author</label>
          {{input value=username id="username" placeholder=answer.username}}
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=answer.date}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=answer.content}}
        </div>
        <span title="save update" {{action 'editAnswer' answer}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel update" {{action 'editAnswerHide'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}

    <span title="update answer" {{action 'editAnswerForm' answer}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

{{/if}}
