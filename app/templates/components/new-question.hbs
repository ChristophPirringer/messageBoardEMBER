{{yield}}

{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div class="new-question-form">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input class="form-control" value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input class="form-control" value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input class="form-control" value=content id="content"}}
        </div>

        <span title="save question" {{action 'save'}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel question" {{action 'questionFormHide'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}
  <span title="Write New Question!" {{action 'questionFormShow' }} class="glyphicon glyphicon-file" aria-hidden="true"></span>

{{/if}}
